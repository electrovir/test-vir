{
    "name": "test-vir",
    "version": "0.0.9",
    "description": "The heroic testing package",
    "main": "dist/index.js",
    "scripts": {
        "prepublishOnly": "npm run test && chmod +x dist/api/api.js",
        "compile": "rm -rf dist && tsc",
        "test": "npm run compile && bash run-tests.sh",
        "test:full": "npm run test && npm run spellcheck && npm run format:check",
        "spellcheck": "cspell \"./**/*\"",
        "format": "prettier --ignore-path .gitignore --write './{,!(dist)/**/}*.+(ts|json|html|css)'",
        "format:check": "prettier --ignore-path .gitignore --check \"./{,!(dist)/**/}*.+(ts|json|html|css)\""
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/electrovir/test-vir.git"
    },
    "keywords": [
        "automated",
        "test",
        "testing",
        "tests",
        "vir"
    ],
    "author": "electrovir (github.com/electrovir)",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/electrovir/test-vir/issues"
    },
    "bin": {
        "test-vir": "dist/api/api.js"
    },
    "types": "dist/index.d.ts",
    "homepage": "https://github.com/electrovir/test-vir#readme",
    "devDependencies": {
        "@types/node": "^14.14.31",
        "cspell": "^5.3.3",
        "prettier": "^2.2.1",
        "prettier-plugin-organize-imports": "^1.1.1",
        "typescript": "^4.2.2"
    },
    "dependencies": {
        "ansi-styles": "^5.1.0",
        "catch-exit": "^1.1.0",
        "fast-deep-equal": "^3.1.3",
        "glob": "^7.1.6",
        "glob-promise": "^4.0.1"
    }
}
